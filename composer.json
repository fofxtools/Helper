{
    "name": "fofx/helper",
    "description": "Helper functions.",
    "license": "MIT",
    "authors": [
        {
            "name": "fofx",
            "email": "177870764+fofxtools@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.12",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "FOfX\\Helper\\": "src/"
        },
        "classmap": [
            "src/"
        ],
        "files": [
            "config/constants.php",
            "src/array.php",
            "src/buffer.php",
            "src/datetime.php",
            "src/file.php",
            "src/functions.php",
            "src/math.php",
            "src/memory.php",
            "src/scraping.php",
            "src/server.php",
            "src/string.php",
            "src/text.php",
            "bootstrap/init.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "FOfX\\Helper\\": [
                "tests/"
            ]
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse",
        "analyse": "@phpstan",
        "analyze": "@phpstan",
        "phpunit": "vendor/bin/phpunit --color=always",
        "test": "@phpunit",
        "tests": "@phpunit"
    }
}